    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: sans-serif;
            overflow: hidden;
            background: #f5f5f5;
            height: 100dvh;
        }

        header {
            background: #333;
            color: white;
            padding: 0.6rem 1rem;
            position: fixed;
            top: 0; left: 0; right: 0;
            z-index: 200;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        #hud {
            display: flex;
            gap: 0.75rem;
            align-items: center;
            margin-left: auto;
            font-size: 0.85rem;
            flex-wrap: wrap;
            justify-content: flex-end;
        }

        #manna-wrap {
            width: 80px; height: 10px;
            border: 1px solid #aaa;
            border-radius: 5px;
            overflow: hidden;
            background: #555;
        }

        #manna {
            height: 100%; width: 0%;
            background: linear-gradient(90deg, #4caf50, #8bc34a);
            transition: width 0.2s ease;
        }

        footer {
            background: #eee;
            border-top: 1px solid #ccc;
            padding: 0.1rem 0.75rem;
            position: fixed;
            bottom: 0; left: 0; right: 0;
            z-index: 200;
            font-size: 0.7rem;
            color: #555;
        }

        #help-btn {
            background: transparent;
            border: 1px solid #aaa;
            color: white;
            border-radius: 4px;
            padding: 0.2rem 0.5rem;
            cursor: pointer;
            font-size: 0.8rem;
            white-space: nowrap;
        }
        #help-btn:hover { background: rgba(255,255,255,0.15); }

        #instructions {
            position: fixed;
            top: 52px;
            left: 50%;
            transform: translateX(-50%);
            background: rgba(255,255,255,0.97);
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 0.6rem 1.2rem;
            text-align: center;
            color: #444;
            font-size: 0.85rem;
            line-height: 1.8;
            z-index: 150;
            box-shadow: 0 2px 8px rgba(0,0,0,0.12);
            white-space: nowrap;
        }
        #instructions kbd {
            background: #eee;
            border: 1px solid #767676;
            border-radius: 4px;
            padding: 1px 5px;
            font-size: 0.8rem;
            font-family: monospace;
        }

        #turtle {
            position: fixed;
            top: 0; left: 0;
            z-index: 100;
            cursor: pointer;
            overflow: visible;
            touch-action: none;
        }
        #turtle:focus { outline: 3px solid #4caf50; outline-offset: 4px; }
        #turtle.active { outline: none; }

        /* D-pad */
        #dpad {
            position: fixed;
            bottom: 48px;
            z-index: 300;
            user-select: none;
            display: none;
        }
        #dpad.left  { left: 16px; }
        #dpad.right { right: 16px; }

        .dpad-row {
            display: flex;
            justify-content: center;
        }

        .dpad-btn {
            width: 56px; height: 56px;
            background: transparent;
            border: 2px solid #555;
            border-radius: 10px;
            font-size: 1.4rem;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            touch-action: none;
            -webkit-tap-highlight-color: transparent;
            color: black;
            margin: 3px;
        }
        .dpad-btn:active,
        .dpad-btn.pressed {
            background: #2d6e30;
            border-color: #4caf50;
        }
        .dpad-gap {
            width: 56px; height: 56px;
            margin: 3px;
        }

        /* Toggle button always on opposite side from dpad */
        #dpad-toggle {
            position: fixed;
            bottom: 80px;
            z-index: 300;
            display: none;
            background: #1a1a1a;
            border: 2px solid #555;
            border-radius: 10px;
            color: white;
            font-size: 1rem;
            padding: 0.4rem 0.7rem;
            cursor: pointer;
            touch-action: none;
            -webkit-tap-highlight-color: transparent;
        }
        #dpad-toggle:active { background: #2d6e30; border-color: #4caf50; }
        #dpad.left  + #dpad-toggle { left: auto; right: 16px; }
        #dpad.right + #dpad-toggle { left: 16px; right: auto; }

        @keyframes floatUp {
            0%   { opacity: 1; transform: translate(-50%, 0); }
            100% { opacity: 0; transform: translate(-50%, -50px); }
        }
        @media (prefers-reduced-motion: reduce) {
            @keyframes floatUp { 0%, 100% { opacity: 0; } }
        }
